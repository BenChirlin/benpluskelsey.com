html
	font-family 'Thasadith', sans-serif
	background-color $dark

body
	&.home
		background-position center
		background-repeat no-repeat
		background-size cover
		background-image url('/images/background.jpg')
	&.info
		background-image url('/images/stucco-1.png')
		background-repeat repeat
		background-size auto
		background-color $off-white

#header-logo
	margin-top 45px
	text-decoration none
	h1
		font-size 55px
		line-height 20px

#body
	display flex
	flex-direction column
	align-items center
	width 100%
	min-height 100vh
	padding-bottom 50px

.home
	#body
		justify-content flex-end
		padding-bottom 0
	#nav
		display flex
		justify-content space-around
		margin 30px 50px 0

		a
			color $robin

	.content
		margin-bottom 7vh
		z-index 5

		h1, h2, h3, a
			color $white
	
.info
	#body
		max-width 700px
		min-width 300px
		margin auto
	#nav
		margin-bottom 25px
		padding-bottom 15px
		border-bottom 1px solid $dark
		a
			color $blue
	.content
		padding 0 20px
		min-width 80%
	center
		margin-bottom 25px
		font-style italic
		text-shadow 1px 3px 5px rgba(0,0,0,.3)

.info.page_rsvp #body
	max-width initial
	min-width initial

#background-overlay
	background linear-gradient(to top,rgba(0,0,0,.5) 0, rgba(0,0,0,.45) 40%, rgba(0,0,0,0) 80%)
	position absolute
	width 100%
	height 100%
	z-index 2

#nav
	ul
		list-style none
		text-align center
		margin 0
	li
		display inline-block

	a,
	a:after
		transition all 0.5s
	a
		position relative
		font-size 20px
		padding 0 10px
		margin 0 2px
		border-radius(10px)
		text-decoration none
		z-index 5
		
		&:hover
			color $white

		&:after
			position absolute
			background-color $blue-transparent
			bottom 0
			left 0
			right 0
			margin auto
			width 0%
			content '.'
			color transparent
			height 100%
			z-index -1

		&:hover:after
				width 100%