html, body
	font-family 'Thasadith', sans-serif
	background-color $yellow

	&.home
		background-position center
		background-repeat no-repeat
		background-size cover
		background-image url('/images/background.jpg')
	&.info
		background-image url('/images/stucco-1.png')

#header-logo
	margin-top 20px
	h1
		font-size 55px
#nav
	a
		font-size 20px
		font-weight 700
		margin 0 10px
		padding 10px
		border-radius 10px
		transition background-color 0.3s

		&:hover
			background-color rgba(0, 0, 0, 0.5)
			text-decoration none

#body
	display flex
	flex-direction column
	align-items center
	width 100%
	min-height 100vh
	padding-bottom 50px

.home
	#body
		justify-content flex-end
	#nav
		display flex
		justify-content space-around
		margin 30px 50px 0
	.content
		margin-bottom 7vh
		z-index 5

		h1, h2, h3, a
			color $white
	
.info
	#body
		max-width 700px
		min-width 300px
		margin auto
	#nav
		margin-bottom 15px
		padding-bottom 15px
		border-bottom 1px solid $dark

#background-overlay
	background linear-gradient(to top,rgba(0,0,0,.5) 0, rgba(0,0,0,.45) 40%, rgba(0,0,0,0) 80%)
	position absolute
	width 100%
	height 100%
	z-index 2