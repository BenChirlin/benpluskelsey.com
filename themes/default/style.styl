@import url('https://fonts.googleapis.com/css?family=Tangerine|Thasadith:400,700')
$purple = #ffd14e
$light_purple = #f7efb6 
$breakpoints = {
	hd: 1280px
	desktop: 1024px
	tablet: 768px
	mobile: 400px
}
html, body
	padding 0
	margin 0
	width 100%
	height 100%
	font-size 100%
	@media(max-width $breakpoints.tablet)
			font-size 90%
	font-family 'Thasadith', sans-serif
	background-image url('/images/background.jpg')
	background-position center
	background-repeat no-repeat
	background-size cover
	display flex
	flex-direction column
	justify-content flex-end
	align-items center

#body
	margin-bottom 15vh
	z-index 5
#background-overlay
	background linear-gradient(to top,rgba(0,0,0,0.45) 0%,rgba(0,0,0,0) 50%)
	position absolute
	width 100%
	height 100%
	z-index 2
h1
	font-size 7rem
	line-height 0.7em
	@media(max-width $breakpoints.mobile)
			font-size 5rem
	margin 0
	user-select none
h2
	font-size 3em
h1,h2
	font-family: 'Tangerine', sans-serif
h1,h2,h3
	color #FFF
	text-shadow 1px 3px 5px rgba(0,0,0,.3)
	text-align center
	margin 5px 10px
h3
	&:hover
		span
			display inline-block
			animation-duration 1s
			// animation-delay .5s	
			animation-timing-function: linear
			animation-iteration-count infinite
			animation-direction: alternate
		span:first-child
			animation-name: leftFlame
			transform-origin right center
		span:last-child
			animation-name: rightFlame
			transform-origin left center
a
	color #FFF
	display inline-block
	text-decoration:  none
	user-select none
	transition: transform .1s ease-in
	&:hover
		text-decoration:  underline
p	
	text-align center
	display flex
	@media(max-width $breakpoints.mobile)
		flex-direction column
		a
			margin 0 0 10px 0 !important
	a
		margin 0 10px	